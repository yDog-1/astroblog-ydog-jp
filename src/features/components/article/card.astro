---
import { formatDateJapanese } from "@/libs/date";
import type { Article } from "@/types/Article";
import { FaArrowCircleRight } from "react-icons/fa";

interface Props {
  article: Article;
}

const { article } = Astro.props;

const { title, description, publishedAt } = article;
const formatedDate = formatDateJapanese(publishedAt);
---

<div>
  <a
    href={`/post/${title}`}
    class="group flex flex-1 flex-col rounded-lg border-b-4 bg-slate-100 py-3 gap-3 duration-100 hover:border-none hover:translate-y-[4px] active:bg-slate-200"
  >
    <h2 class="px-5 text-2xl font-bold group-hover:underline">
      {title}
    </h2>
    <div class="flex justify-between px-5 flex-col">
      <p>{description}</p>
      <div class="flex">
        <p class="text-sm text-end flex-1 py-1 mr-4">
          {formatedDate}
        </p>
        <FaArrowCircleRight
          color={"#DC2626"}
          size={"1.7em"}
          className="my-auto ml-auto"
        />
      </div>
    </div>
  </a>
</div>
