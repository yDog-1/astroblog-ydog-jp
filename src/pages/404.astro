---
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import Head from "@/components/Head.astro";

const title = "404 Not Found";
const description = "おっと、このページは見つかりませんでした！";
---

<Layout>
  <Head slot="head" title={title} description={description} />
  <main class="grid items-center flex-1">
    <div class="flex flex-col items-center">
      <h2 class="mb-6 text-5xl">404 Not Found</h2>
      <div>
        <p class="text-xl">おっと、このページは見つかりませんでした！</p>
        <div class="flex justify-center mt-6">
          <a href="/">
            <Image
              src="/images/yDog.webp"
              alt="yDogのアイコン"
              title="yDog"
              width={120}
              height={120}
            />
          </a>
          <div class="content-end">
            <a href="/">
              <p class="text-blue-500 decoration-blue-500 hover:underline">
                ホーム画面に戻る
              </p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
