---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <main class="grid items-center">
    <div class="flex flex-col items-center">
      <h2 class="mb-6 text-5xl">404 Not Found</h2>
      <div>
        <p class="text-xl">おっと、このページは見つかりませんでした！</p>
        <div class="flex mt-6 justify-center">
          <a class="flex items-end hover:underline" href="/">
            <img
              src="/images/yDog.png"
              alt="yDogのアイコン"
              title="yDog"
              width="36rem"
            />
            <p class="text-blue-500">ホーム画面に戻る</p>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
