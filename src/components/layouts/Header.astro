---
import Github from "../elements/logo/Github";
import X from "../elements/logo/X";
const darkMode = false;
const iconSize = 15;
---

<header class="bg-red-600 py-3 md:pb-5 md:pt-10">
  <div class="container mx-auto px-2">
    <div class="flex flex-col text-slate-50 md:flex-row">
      <a href="/" class="flex items-center font-extrabold">
        <h1 class="px-3 pb-3 text-4xl text-slate-50 md:p-0 md:text-3xl">
          yDog Tech Blog
        </h1>
      </a>
      <div class="ml-auto flex md:-mb-1">
        <ul class="mb-2 mt-auto flex items-end space-x-3 md:m-0 md:mb-1">
          <li class="px-2 -mb-[1px] text-lg md:hover:underline">
            <a href="/">TOP</a>
          </li>
          <li class="rounded md:hover:bg-slate-950">
            <a
              href="https://x.com/yDog_1"
              target="_blank"
              rel="noopener noreferrer"
              class="block p-1"
            >
              <X width={iconSize} height={iconSize} darkMode={darkMode} />
            </a>
          </li>
          <li class="rounded md:hover:bg-slate-950">
            <a
              href="https://github.com/yDog-1"
              target="_blank"
              rel="noopener noreferrer"
              class="block p-1"
            >
              <Github width={iconSize} height={iconSize} darkMode={darkMode} />
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
