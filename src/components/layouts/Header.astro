---
import Logo from "@/components/elements/logo/logo.astro";
import logoList from "@/components/elements/logo/logoList";
const size = 18;
---

<header class="bg-red-600 py-3 md:pb-5 md:pt-10">
  <div class="container mx-auto px-2">
    <div class="flex flex-col text-slate-50 md:flex-row">
      <a href="/" class="flex items-center font-extrabold">
        <h1 class="px-3 pb-3 text-4xl text-slate-50 md:p-0 md:text-3xl">
          yDog Tech Blog
        </h1>
      </a>
      <div class="ml-auto flex md:-mb-1">
        <ul
          class="mb-2 mt-auto flex items-end space-x-4 md:m-0 md:mb-1 md:space-x-2"
        >
          <li
            class="px-2 -mb-[1px] text-lg md:hover:underline invisible md:visible"
          >
            <a href="/" class="text-xl">TOP</a>
          </li>
          {
            logoList.map((l) => (
              <li class="rounded md:hover:bg-slate-950">
                <a
                  href={l.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block p-1"
                >
                  <Logo
                    width={size}
                    height={size}
                    dir={l.dir.white}
                    name={l.name}
                  />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</header>
